	"paths": {
		"/users/common": {
			"post": {
				"tags": [
					"Users"
				],
				"summary": "Creates a common user",
				"description": "",
				"consumes": [
		        	"application/json"
		        ],
		        "produces": [
		          	"application/json"
		        ],
				"parameters": [
		          {
		            "in": "body",
		            "name": "body",
		            "description": "",
		            "required": true,
		            "schema": {
		              "$ref": "#/definitions/UserCommon"
		            }
		          }
		        ],
				"responses": {
					"200": {
						"description": "Success",
						"examples": {
							"application/json": {
								"success": true,
							    "message": "Common User registered",
							    "data": {
									"uuid": "077919d2-503b-4378-ac21-52e53d4fa8ab"
								}
							}
						}
					},
					"400": {
						"description": "Duplicate cpf",
						"examples": {
							"application/json": {
								"success": false,
							    "message": "Already exists a user with this cpf"
							}
						}
					}
				}
			}
		},
		"/users/seller": {
			"post": {
				"tags": [
					"Users"
				],
				"summary": "Creates a seller user",
				"description": "",
				"consumes": [
		        	"application/json"
		        ],
		        "produces": [
		          	"application/json"
		        ],
				"parameters": [
		          {
		            "in": "body",
		            "name": "body",
		            "description": "",
		            "required": true,
		            "schema": {
		              "$ref": "#/definitions/UserSeller"
		            }
		          }
		        ],
				"responses": {
					"200": {
						"description": "Success",
						"examples": {
							"application/json": {
								"success": true,
							    "message": "Seller User registered",
							    "data": {
									"uuid": "33d890aa-03df-4159-8ec4-ee67876c9875"
								}
							}
						}
					},
					"400": {
						"description": "Duplicate cnpj",
						"examples": {
							"application/json": {
								"success": false,
							    "message": "Already exists a user with this cnpj"
							}
						}
					}
				}
			}
		},
		"/users/wallet": {
			"post": {
				"tags": [
					"Users"
				],
				"summary": "Adds a value to a user wallet",
				"description": "",
				"consumes": [
		        	"application/json"
		        ],
		        "produces": [
		          	"application/json"
		        ],
				"parameters": [
		          {
		            "in": "body",
		            "name": "body",
		            "description": "",
		            "required": true,
		            "schema": {
		              "$ref": "#/definitions/UserWalletAddMoney"
		            }
		          }
		        ],
				"responses": {
					"200": {
						"description": "Success",
						"examples": {
							"application/json": {
								"success": true,
							    "message": "Monney added"							    
							}
						}
					},
					"400": {
						"description": "Maximum balance",
						"examples": {
							"application/json": {
								"success": false,
							    "message": "Value exceeds the max balance limit"
							}
						}
					}
				}
			}
		},
		"/transactions": {
			"post": {
				"tags": [
					"Transactions"
				],
				"summary": "Starts a transaction",
				"description": "",
				"consumes": [
		        	"application/json"
		        ],
		        "produces": [
		          	"application/json"
		        ],
				"parameters": [
		          {
		            "in": "body",
		            "name": "body",
		            "description": "",
		            "required": true,
		            "schema": {
		              "$ref": "#/definitions/TransactionStart"
		            }
		          }
		        ],
				"responses": {
					"200": {
						"description": "Success",
						"examples": {
							"application/json": {
								"success": true,
							    "message": "Transaction started",
							    "data": {
									"uuid": "7725f6de-6d52-4221-9575-ab20c6a3d0d1"
								}
							}
						}
					},
					"400": {
						"description": "Seller is not allowed to send money",
						"examples": {
							"application/json": {
								"success": false,
							    "message": "Seller is not allowed to send money"
							}
						}
					}
				}
			}
		},
		"/transactions/authorize": {
			"put": {
				"tags": [
					"Transactions"
				],
				"summary": "Authorizes a started transaction",
				"description": "",
				"consumes": [
		        	"application/json"
		        ],
		        "produces": [
		          	"application/json"
		        ],
				"parameters": [
		          {
		            "in": "body",
		            "name": "body",
		            "description": "",
		            "required": true,
		            "schema": {
		              "$ref": "#/definitions/TransactionAuthorize"
		            }
		          }
		        ],
				"responses": {
					"200": {
						"description": "Success",
						"examples": {
							"application/json": {
								"success": true,
							    "message": "Transaction authorized",
							    "data": {
									"uuid": "7725f6de-6d52-4221-9575-ab20c6a3d0d1",
									"status_authorization": "authorized",
									"status_notification": "pending"
								}
							}
						}
					},
					"400": {
						"description": "Only authorizes a pending transaction",
						"examples": {
							"application/json": {
								"success": false,
							    "message": "Transaction can not be authorized. Status: cancelled"
							}
						}
					}
				}
			}
		},
		"/transactions/send-notification": {
			"put": {
				"tags": [
					"Transactions"
				],
				"summary": "Sends a notification to an authorized transaction which has the notification pending",
				"description": "",
				"consumes": [
		        	"application/json"
		        ],
		        "produces": [
		          	"application/json"
		        ],
				"parameters": [
		          {
		            "in": "body",
		            "name": "body",
		            "description": "",
		            "required": true,
		            "schema": {
		              "$ref": "#/definitions/TransactionNotificationSend"
		            }
		          }
		        ],
				"responses": {
					"200": {
						"description": "Success",
						"examples": {
							"application/json": {
								"success": true,
							    "message": "Transaction notification sent"
							}
						}
					},
					"400": {
						"description": "Only pending notifications for authorized transactions can be sent",
						"examples": {
							"application/json": {
								"success": false,
							    "message": "Notification has already been sent"
							}
						}
					}
				}
			}
		},
		"/transactions/{uuid}": {
			"get": {
				"tags": [
					"Transactions"
				],
				"summary": "Finds a transaction by UUID",
				"description": "",
				"consumes": [
		        	"application/json"
		        ],
		        "produces": [
		          	"application/json"
		        ],
				"parameters": [
		          {
		            "in": "path",
		            "name": "uuid",
		            "description": "UUID of a transaction",
		            "required": true,
		            "type": "string",
		            "example": "7725f6de-6d52-4221-9575-ab20c6a3d0d1"
		          }
		        ],
				"responses": {
					"200": {
						"description": "Success",
						"examples": {
							"application/json": {
								"success": true,
							    "message": "Transaction detail",
								"data": {
									"uuid": {
										"type": "string",
										"example": "7725f6de-6d52-4221-9575-ab20c6a3d0d1"
									},
									"amount": {
										"type": "float",
										"example": 1
									},
									"statusAuthorization": {
										"type": "string",
										"example": "authorized"
									},
									"statusNotification": {
										"type": "string",
										"example": "sent"
									},
									"payerUuid": {
										"type": "string",
										"example": "518fc61d-5da4-4a2e-8d2f-75f91bcb9144"
									},
									"payeeUuid": {
										"type": "string",
										"example": "674e243f-cc34-4415-88a2-599a962f940b"
									},
									"createdAt": {
										"type": "string",
										"example": "2021-11-09 19:52:37"
									},
									"updatedAt": {
										"type": "string",
										"example": "2021-11-09 19:53:38"
									}
								}
							}
						}
					},
					"404": {
						"description": "Notification not found by UUID",
						"examples": {
							"application/json": {
								"success": false,
							    "message": "Notification not found"
							}
						}
					}
				}
			}
		},
		"/transactions/cancel/{uuid}": {
			"delete": {
				"tags": [
					"Transactions"
				],
				"summary": "Cancels a pending transaction",
				"description": "",
				"consumes": [
		        	"application/json"
		        ],
		        "produces": [
		          	"application/json"
		        ],
				"parameters": [
		          {
		            "in": "path",
		            "name": "uuid",
		            "description": "UUID of a transaction",
		            "required": true,
		            "type": "string",
		            "example": "7725f6de-6d52-4221-9575-ab20c6a3d0d1"
		          }
		        ],
				"responses": {
					"200": {
						"description": "Success",
						"examples": {
							"application/json": {
								"success": true,
							    "message": "Transaction cancelled"
							}
						}
					},
					"400": {
						"description": "Only pending transactions can ben cancelled",
						"examples": {
							"application/json": {
								"success": false,
							    "message": "Transaction can not be cancelled. Status: authorized."
							}
						}
					}
				}
			}
		}
	},
