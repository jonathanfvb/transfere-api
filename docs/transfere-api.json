				"payer_uuid": {
					"type": "string",
					"example": "077919d2-503b-4378-ac21-52e53d4fa8ab"
				},
				"payee_uuid": {
					"type": "string",
					"example": "33d890aa-03df-4159-8ec4-ee67876c9875"
				}
			}
		},
		"TransactionAuthorize": {
			"type": "object",
			"properties": {
				"uuid": {
					"type": "string",
					"example": "7725f6de-6d52-4221-9575-ab20c6a3d0d1"
				}
			}
		},
		"TransactionNotificationSend": {
			"type": "object",
			"properties": {
				"uuid": {
					"type": "string",
					"example": "7725f6de-6d52-4221-9575-ab20c6a3d0d1"
				}
			}
		}
	}
}